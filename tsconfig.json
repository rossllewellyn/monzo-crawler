{
  "compilerOptions": {
    "lib": ["ESNext"],
    "target": "ESNext",
    "moduleResolution": "node",
    "module": "ESNext",
    "esModuleInterop": true,
    "removeComments": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,
    "outDir": "build"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules/**/*", "src/**/*.test.ts"]
}
